<h1>Welcome to Project Manager</h1>
<br>
<br>
<button class="btn btn-outline-dark btn-lg btn-block"><%= link_to('Click here to create a new project!', projects_new_path) %></button>
<br>
<br>
<h3> List of projects </h3>
<br>
<br>

<%= form_with url: root_path, method: :get, class: 'form-inline' do |form| %>
  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :query, "Search for:" %>
    <%= form.select :status, [["All Projects", :all], ["Proposed Project", :proposal], ["In Progresss", :progress], ["Completed", :finished]], {selected: params[:status]}, class:'form-control' %>
  </div>
    <%= form.submit "Search", class: 'btn btn-success mb-2' %>
<% end %>

<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @projects.each do |project| %>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.started_at %></td>
        <td><%= project.ended_at %></td>
        <td><%= project.status %></td>
        <td><button class="btn btn-outline-dark btn-sm"><%= link_to 'Delete', destroy_project_path(project), method: :delete %></button></td>
    </tr>
      <% end %>
  </tbody>
</table>


